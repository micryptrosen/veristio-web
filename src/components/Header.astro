---
const nav = [
  { label: "Products", href: "/products" },
  { label: "Company", href: "/company" },
  { label: "Legal & Terms", href: "/legal" },
];
---
<header class="site-header">
  <div class="container header-inner">
    <a class="pill brand" href="/" aria-label="Veristio Home">
      <span style="font-weight:900; color:var(--ink);">Veristio</span>
      <span class="small">Verification-first systems</span>
    </a>

    <nav class="nav" aria-label="Primary">
      {nav.map((n) => (
        <a class="pill" href={n.href}>{n.label}</a>
      ))}
    </nav>

    <div class="header-actions">
      <a class="btn ghost" href="/products">Explore</a>
      <a class="btn primary" href="/products/ultrapro">UltraPro</a>
    </div>
  </div>
</header>
