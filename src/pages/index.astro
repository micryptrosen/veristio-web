---
import BaseLayout from "../layouts/BaseLayout.astro";
import SuiteTerminal from "../components/SuiteTerminal.astro";
---

<BaseLayout
  title="Veristio - Verification-first systems"
  description="Verification-first software focused on clarity, defensibility, and operator trust."
  page="home"
>
  <!-- HERO: cover page + suite preview (no products card in hero) -->
  <section class="hero">
    <div class="container">
      <div class="hero-grid">
        <div class="reveal stack-16">
          <span class="kicker"><span class="dot"></span> Verification-first systems</span>
          <h1>Clarity you can defend.</h1>
          <p>
            Veristio builds software that favors evidence, transparency, and operational truth
            over opaque automation and noisy outputs.
          </p>

          <div class="hero-actions">
            <a class="btn primary" href="/products">Explore Products</a>
            <a class="btn" href="/company">Company</a>
          </div>

          <div class="bullets">
            <div class="bullet"><span class="check"></span> Evidence-led workflows</div>
            <div class="bullet"><span class="check"></span> Operator trust and auditability</div>
            <div class="bullet"><span class="check"></span> Designed to work alongside your stack</div>
          </div>
        </div>

        <!-- Suite terminal preview (animated) -->
        <SuiteTerminal />
      </div>
    </div>
  </section>

  <!-- PRODUCT SHORTCUTS: belongs below hero (cover-page intent) -->
  <section class="section tight">
    <div class="container">
      <div class="reveal stack-12 mb-18">
        <h2>Products</h2>
        <p class="muted">Jump straight into the suite.</p>
      </div>

      <div class="grid two reveal">
        <a class="card pad-14" href="/products/ultranox">
          <h3>UltraNOx</h3>
          <p class="muted">Operational diagnostics and health analysis.</p>
        </a>
        <a class="card pad-14" href="/products/ultrasignal">
          <h3>UltraSignal</h3>
          <p class="muted">Signal-focused SIEM and evidence timelines.</p>
        </a>
        <a class="card pad-14" href="/products/ultracontrol">
          <h3>UltraControl</h3>
          <p class="muted">Controlled-state monitoring and governance evidence.</p>
        </a>
        <a class="card pad-14" href="/products/ultrapro">
          <h3>UltraPro</h3>
          <p class="muted">Verification-first analysis and defensible reporting.</p>
        </a>
      </div>

      <div class="mt-14 reveal">
        <a class="btn ghost" href="/products">View product map</a>
      </div>
    </div>
  </section>

  <!-- SUITE: belongs ABOVE the 4 value cards -->
  <section class="section tight">
    <div class="container">
      <div class="grid two reveal">
        <div class="card">
          <div class="kicker"><span class="dot"></span> Suite</div>
          <h3>Suite at a glance</h3>
          <p>
            Diagnostics, events, governance, and reporting - tied together cleanly.
          </p>
        </div>

        <div class="card">
          <h3>Where to begin</h3>
          <p class="muted">If you want a simple path:</p>
          <div class="bullets mt-10">
            <div class="bullet"><span class="check"></span> UltraNOx for health and diagnostics</div>
            <div class="bullet"><span class="check"></span> UltraSignal for event timelines</div>
            <div class="bullet"><span class="check"></span> UltraControl for governed state</div>
            <div class="bullet"><span class="check"></span> UltraPro to synthesize and report</div>
          </div>
        </div>
      </div>

      <div class="grid four reveal mt-14">
        <div class="card">
          <h3>Verification-first</h3>
          <p>Prove outcomes with traceable inputs and transparent conclusions.</p>
        </div>
        <div class="card">
          <h3>Operator trust</h3>
          <p>Reduce noise and keep humans in control of judgment.</p>
        </div>
        <div class="card">
          <h3>Audit-ready</h3>
          <p>Evidence that supports review, handoff, and compliance workflows.</p>
        </div>
        <div class="card">
          <h3>Suite coherence</h3>
          <p>Each product stands alone, but integrates cleanly across the stack.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- PRODUCT MAP CTA (kept simple, no duplicated "Where to begin") -->
  <section class="section tight">
    <div class="container">
      <div class="card reveal stack-12">
        <h2>Explore the product map</h2>
        <p class="muted">Start with the suite overview, then go product-by-product.</p>
        <div class="mt-14">
          <a class="btn primary" href="/products">Products</a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
'@ | Set-Content -LiteralPath "C:\Dev\HCJ\Veristio_Web\src\pages\index.astro" -Encoding utf8
