---
/**
 * Veristio homepage (parent company site)
 * NOTE: Product links are external / configurable.
 * No product code belongs here.
 */

import "../styles/veristio.css";

// Centralized product link
const ULTRAPRO_URL = "https://www.veristio.com/ultrapro";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <title>Veristio — Verification-first software platforms</title>

    <meta
      name="description"
      content="Veristio develops focused tools that help organizations verify outcomes and produce defensible evidence—without unnecessary operational control."
    />

    <meta name="color-scheme" content="light" />
    <meta name="theme-color" content="#fbfbfc" />
  </head>

  <body>
    <!-- HEADER -->
    <header class="site-header" role="banner">
      <div class="container header-inner">
        <a class="brand" href="/" aria-label="Veristio home">Veristio</a>

        <nav class="nav" aria-label="Primary navigation">
          <a href="/products">Products</a>
          <a href="/about">About</a>
          <a href="/company">Legal &amp; Trust</a>
        </nav>
      </div>
    </header>

    <main>
      <!-- HERO -->
      <section class="hero">
        <div class="container">
          <div class="kicker">Verification-first software platforms</div>

          <h1>Software platforms built for verification, clarity, and trust.</h1>

          <p class="lead">
            Veristio develops focused tools that help organizations verify outcomes
            and produce defensible evidence—without unnecessary operational control.
          </p>

          <div class="hero-links">
            <a class="link primary" href={ULTRAPRO_URL} target="_blank" rel="noopener">
              View UltraPro →
            </a>
            <a class="link" href="/about">
              Learn more about Veristio →
            </a>
          </div>
        </div>
      </section>

      <!-- WHAT WE BUILD -->
      <section class="section">
        <div class="container grid">
          <div>
            <h2>What We Build</h2>
          </div>

          <div>
            <p>Veristio builds verification-first software platforms.</p>

            <p>
              Our products generate clear, defensible evidence—without persistent
              monitoring, automated enforcement, or operational lock-in.
            </p>

            <ul class="bullets">
              <li>Verification over control</li>
              <li>Evidence that stands up to review</li>
              <li>Integration without intrusion</li>
            </ul>
          </div>
        </div>
      </section>

      <!-- PRODUCTS -->
      <section class="section quiet">
        <div class="container grid">
          <div>
            <h2>Products</h2>
          </div>

          <div class="stack">
            <article class="card">
              <h3>UltraPro</h3>
              <p class="tagline">Network change verification &amp; audit-ready evidence</p>

              <p>
                UltraPro helps network teams verify WAN and LAN changes and
                produce structured, defensible evidence—without configuration
                control or monitoring.
              </p>

              <a class="link primary" href={ULTRAPRO_URL} target="_blank" rel="noopener">
                View UltraPro →
              </a>
            </article>

            <p class="note">
              Additional Veristio products will be introduced over time.
            </p>
          </div>
        </div>
      </section>
    </main>

    <!-- FOOTER -->
    <footer class="site-footer" role="contentinfo">
      <div class="container footer-inner">
        <div>
          <div class="footer-brand">Veristio, Inc.</div>
          <div class="footer-copy">© 2025 Veristio. All rights reserved.</div>
        </div>

        <div class="footer-links">
          <div class="footer-col">
            <div class="footer-title">Products</div>
            <a href={ULTRAPRO_URL} target="_blank" rel="noopener">UltraPro</a>
          </div>

          <div class="footer-col">
            <div class="footer-title">Legal &amp; Trust</div>
            <a href="/terms">Terms of Service</a>
            <a href="/privacy">Privacy Policy</a>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
