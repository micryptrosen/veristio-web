---
import BaseLayout from "../../layouts/BaseLayout.astro";

const products = [
  {
    name: "UltraNOx",
    href: "/products/ultranox",
    tagline: "Operational diagnostics and health analysis."
  },
  {
    name: "UltraSignal",
    href: "/products/ultrasignal",
    tagline: "Signal-focused SIEM and evidence timelines."
  },
  {
    name: "UltraControl",
    href: "/products/ultracontrol",
    tagline: "Controlled-state monitoring and governance evidence."
  },
  {
    name: "UltraPro",
    href: "/products/ultrapro",
    tagline: "Verification-first analysis and defensible reporting."
  },
  {
    name: "UltraAdvantage",
    href: "/products/ultraadvantage",
    tagline: "Assistive services layer for operators and teams."
  }
];
---
<BaseLayout
  useUltraProStyles={true}
  title="Products - Veristio"
  description="Veristio product map - suite overview and product pages."
  page="products"
>
  <section class="hero">
    <div class="container">
      <div class="hero-grid">
        <div class="reveal stack-16">
          <span class="kicker"><span class="dot"></span> Product Map</span>
          <h1>Veristio Products</h1>
          <p>
            Each product is designed to stand alone while integrating into a coherent,
            verification-first suite.
          </p>
          <div class="hero-cta">
            <a class="btn primary" href="/company">Company</a>
            <a class="btn" href="/">Home</a>
          </div>
        </div>

        <div class="reveal">
          <div class="card">
            <h3>Suite intent</h3>
            <p>
              Diagnostics, events, governance, and reporting - connected by evidence and clarity.
            </p>
            <div class="divider"></div>
            <div class="bullets">
              <div class="bullet"><span class="check"></span> Reduce uncertainty</div>
              <div class="bullet"><span class="check"></span> Improve traceability</div>
              <div class="bullet"><span class="check"></span> Support review and audit</div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section class="section tight">
    <div class="container">
      <div class="reveal stack-12 mb-18">
        <h2>Products</h2>
        <p>Select a product to open its dedicated page.</p>
      </div>

      <div class="grid three reveal">
        {products.map((p) => (
          <a class="card card-stack-10" href={p.href}>
            <h3>{p.name}</h3>
            <p class="muted">{p.tagline}</p>
            <div class="pill fit">Open -&gt;</div>
          </a>
        ))}
      </div>
    </div>
  </section>
</BaseLayout>



